# Taskinity Example Environment Template
# Copy this file to your example directory as .env.example and customize as needed

# Logging Configuration
LOG_LEVEL=INFO
LOG_DIR=./logs
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Output Configuration
OUTPUT_DIR=./output
REPORT_FORMAT=json

# Database Configuration (if needed)
DB_TYPE=sqlite
DB_HOST=localhost
DB_PORT=5432
DB_NAME=taskinity
DB_USER=taskinity
DB_PASSWORD=taskinity
DB_POOL_SIZE=5

# API Configuration (if needed)
API_TIMEOUT=30
API_RETRIES=3
API_BACKOFF_FACTOR=0.5

